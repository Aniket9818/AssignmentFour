<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginPage">

    <EditText
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/etEmail"
        android:hint="Enter Email Address"
        android:textSize="20sp"
        android:drawableLeft="@drawable/emails"
        />

    <EditText
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:hint="Enter Password"

        android:textSize="20sp"
        android:drawableLeft="@drawable/kees"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#1ca8d8"
        android:text="Login to My Account"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="144dp"
        android:background="#661a00"
        android:text="Forgot Password"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent" />






    <Button
        android:textColor="#ffffff"
        android:layout_margin="5dp"
        android:background="#661a00"
        android:layout_marginStart="67dp"
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Register Now" />
    <TextView
        android:id="@+id/tvRegister"
        android:layout_marginStart="57dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="don't have account? create one for free"
        android:textColor="#FFA500"
        android:textStyle="bold" />






</LinearLayout>